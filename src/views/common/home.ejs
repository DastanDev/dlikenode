
<% 
articles.forEach(function(article) { 
let tags = article.json.tags;let metatags = tags.map(s => '<a href="/tags/'+s+'">#'+s+'</a>').join(' ');
var catg = article.json.category;var category = catg.charAt(0).toUpperCase() + catg.slice(1)
%>
<div>
	<div class="Tweet-card-wrapper">
		<div class="card-userPic-wrapper">
			<a href="/profile/RashHD"><img alt="" width="100%" height="49px" src="https://i.postimg.cc/rwbTkssy/dlike-user-profile.png" style="border-radius: 50%; min-width: 49px;"></a>
		</div>
		<div class="card-content-wrapper">
			<div class="card-content-header">
				<div class="card-header-detail"><span class="card-header-username"><a href="/profile/<%- article.author %>">@<b><%- article.author %></b></a></span><span> <small style="color: #657786;">in</small> <a href="/category/<%- (article.json.category).toLowerCase() %>" style="color:#45b1f3;"><%- category %></a></span><span class="card-header-dot">Â·</span><span class="card-header-date"><%- moment.utc(article.ts).fromNow()%></span></div>
				<div class="card-header-more"></div>
			</div>
			<div class="card-content-info" style="font-weight: 600;padding-top: 10px"><a href="/postit/<%- article.author %>/<%- article.link %>"><%- article.json.title %></a></div>
			<div class="card-content-info" style="color:#45b1f3;padding: 8px 0 4px 0;"><%- metatags.toString() %></div>
			<div class="card-content-images">
				<a href="/postit/<%- article.author %>/<%- article.link %>"><div class="card-image-link"><img alt="" src="<%- article.json.image %>"></div></a>
			</div>
			<div class="card-buttons-wrapper">
				<div class="card-button-wrap heart-wrap" style="justify-content: space-between;">
					<div class="card-icon heart-icon">
						<img src="https://img.icons8.com/material-outlined/20/000000/like--v1.png"/>
					</div>
					<div class="card-icon-value" style="opacity: 1;"><%- article.likes %></div>
				</div>
				<div class="card-button-wrap"><%- (article.likes)*0.1 %> TOK</div>
			</div>
		</div>
	</div>
	<div class="modal-edit" style="display: none;"></div>
</div>
<% }) %>
